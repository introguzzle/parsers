# Комментарии начинаются с символа решетки (#)

APP_NAME=MyApp
APP_ENV=development
DEBUG_MODE=true
MAX_CONNECTIONS=10

DATABASE_HOST=localhost
DATABASE_USER=root
DATABASE_PASSWORD=secret password

DATABASE_PASSWORD="secret password with spaces"
SINGLE_QUOTED='Текст с # и ! не будет интерпретирован'
DOUBLE_QUOTED="Текущий путь: $PWD"

ESCAPED_VALUE="Это значение содержит экранированные символы: \ и \\"

# Ссылки на другие переменные
API_URL="https://api.example.com"
FULL_API_ENDPOINT="${API_URL}/v1/users"

# Значения, содержащие символы новой строки (многострочные значения)
MULTILINE_VALUE="Первая строка\nВторая строка\nТретья строка"

# Использование символа экспорта (для совместимости с shell)
export PATH="/usr/primitive/bin:$PATH"
export NODE_ENV=production

# Переменные с пустыми значениями
EMPTY_VALUE=
ANOTHER_EMPTY_VALUE=""

# Переменные с Unicode символами
UNICODE_VALUE="Пример с юникод символами: ✓ ✔ ✗ ✘"

# Переменные, начинающиеся с цифры или содержащие специальные символы
# Обычно такие имена переменных не рекомендуются, но возможны с кавычками
"123_VARIABLE"=value123
"VARIABLE-WITH-DASH"=value-with-dash

# Пример переменной, значение которой начинается с символа #
HASH_VALUE="#Это не комментарий"

# Пример использования комментария в строке с переменной
VARIABLE_WITH_COMMENT=SomeValue # Это комментарий, он будет проигнорирован

# Значения с табуляцией и пробелами в начале и конце
SPACED_VALUE="   Значение с пробелами вокруг   "

# Переменные со специальными символами
SPECIAL_CHARS="Специальные символы: ~!@#$%^&*()_+-=[]{}|;:',.<>/?"
